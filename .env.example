# ========================================
# PAYSTREAM AI - ENVIRONMENT VARIABLES
# ========================================

# === CIRCLE (REQUIRED) ===
# Get your API key from: https://app.circle.com
CIRCLE_API_KEY=TEST_API_KEY:your_api_key_here
CIRCLE_ENTITY_ID=your_entity_id_here
WALLET_SET_ID=your_wallet_set_id_here

# === AI/ML API (REQUIRED) ===
# Get your API key from: https://aimlapi.com
AIMLAPI_KEY=your_aimlapi_key_here
AIMLAPI_BASE_URL=https://api.aimlapi.com/v1

# === GEMINI AI (REQUIRED) ===
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# === GROQ AI (PENNY AGENT) ===
# Get your API key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# === ELEVENLABS (TEXT-TO-SPEECH) ===
# Get your API key from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=FGY2WhTYpPnrIDTdsKH5  # Penny's voice

# === SUPABASE (REQUIRED) ===
# Get your credentials from: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# === ARC TESTNET (REQUIRED) ===
ARC_RPC_URL=https://rpc.testnet.arc.network
ARC_CHAIN_ID=5042002
USDC_CONTRACT_ADDRESS=0x3600000000000000000000000000000000000000

# === DEPLOYER WALLET (TESTNET ONLY) ===
# WARNING: Never commit real private keys to git!
ETHER_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# === BATCH PAYER CONTRACT ===
BATCH_PAYER_ADDRESS=your_deployed_contract_address_here

# === CIRCLE ON-RAMP (W3S) ===
# The CIRCLE_API_KEY above is already set and will work for on-ramp
# Optional: Webhook secret for production (leave empty for testnet)
CIRCLE_WEBHOOK_SECRET=
# Deployer wallet address (public address, not private key)
NEXT_PUBLIC_DEPLOYER_WALLET=your_deployer_wallet_address_here
# App URL for on-ramp return redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === CIRCLE OFF-RAMP (PAYOUTS) ===
# Circle API base URL (sandbox or production)
CIRCLE_API_BASE=https://api-sandbox.circle.com
# Circle wallet ID for holding USDC (get from Circle dashboard)
CIRCLE_WALLET_ID=your_circle_wallet_id_here

# === PLAID (BANK VERIFICATION) ===
# Get credentials from: https://dashboard.plaid.com
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_sandbox
PLAID_ENV=sandbox

# === CLERK (AUTHENTICATION) ===
# Get credentials from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
